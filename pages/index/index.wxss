.pro-item{
  display: flex;
  flex-direction: row;
}
.pro-thumb{
  flex: 0 0 100rpx;
}
.pro-title{
  flex: 1;
}
.pro-author{
  flex: 0 0 100rpx;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

